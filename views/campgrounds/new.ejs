<% include ../partials/header.ejs %>

    <div class="row">
        <div class="col-md-12">
            <h1 class="h3 mb-2 font-weight-normal text-center">Create A New Campground</h1>

            <form class="form-signin" action="/campgrounds" method="POST" enctype="multipart/form-data">
                <label for="inputName" class="sr-only">Campground Name</label>
                <input type="text" id="inputName" class="form-control" name="campground[name]" placeholder="Campground Name" required autofocus>

                <label for="inputPrice" class="sr-only">Price Per Night</label>
                <input type="number" id="inputPrice" class="form-control" name="campground[price]" placeholder="Price Per Night" min="0.01" step="0.01" required>

                <label for="inputImage" class="sr-only">Image</label>
                <input type="file" id="inputImage" class="form-control" name="image" accept="image/*" required>

                <label for="inputDescription" class="sr-only">Description</label>
                <input type="text" id="inputDescription" class="form-control" name="campground[description]" placeholder="Description" required>

                <label for="inputLocation" class="sr-only">Location</label>
                <input type="text" id="inputLocation" class="form-control" name="location" placeholder="Yosemite National Park, CA" required>

                <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Submit</button>

                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>

<% include ../partials/footer.ejs %>