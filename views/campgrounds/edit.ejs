<% include ../partials/header.ejs %>

    <div class="row">
        <div class="col-md-12">
            <h1 class="h3 mb-2 font-weight-normal text-center">Edit <%= campground.name %></h1>

            <form class="form-signin" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <label for="inputName" class="sr-only">Campground Name</label>
                <input type="text" id="inputName" class="form-control" name="campground[name]" value="<%= campground.name %>" required autofocus>

                <label for="inputPrice" class="sr-only">Price Per Night</label>
                <input type="number" id="inputPrice" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" required>

                <label for="inputImage" class="sr-only">Image</label>
                <input type="file" id="inputImage" class="form-control" name="image" accept="image/*" required>

                <label for="inputDescription" class="sr-only">Description</label>
                <input type="text" id="inputDescription" class="form-control" name="campground[description]" value="<%= campground.description %>" required>

                <label for="inputLocation" class="sr-only">Location</label>
                <input type="text" id="inputLocation" class="form-control" name="location" value="<%= campground.location %>" required>

                <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Submit</button>

            </form>
        </div>
    </div>

<% include ../partials/footer.ejs %>